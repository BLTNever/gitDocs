{
  "parser": "babel-eslint",
  "extends": "standard",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true
  },
  "rules": {
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "quotes": "off",
    "semi": "off",
    "space-before-function-paren": "off",
    "standard/computed-property-even-spacing": "off"
  }
}
